@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-md-7 col-lg-8 col-xl-9">
        <h1>Our works</h1>
        <p><span>Some of our projects across Lower Mainland</span></p>
    </div>
    <div class="col-12 col-md-5 col-lg-4 col-xl-3">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item text-white bg-dark list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home"></a>
            <a class="list-group-item text-white bg-dark list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile"></a>
            <a class="list-group-item text-white bg-dark list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages"></a>
            <a class="list-group-item text-white bg-dark list-group-item-action" id="list-settings-list" data-toggle="list" href="#list-settings" role="tab" aria-controls="settings"></a>
        </div>
    </div>
    <div class="col-12">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list"></div>
            <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list"></div>
            <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list"></div>
            <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list"></div>
        </div>
    </div>
</div>
