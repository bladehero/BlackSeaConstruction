            <a class="list-group-item text-white bg-dark list-group-item-action" id="list-9-list" data-toggle="list" href="#list-9" role="tab">Highland Blvd Residence</a>
            <a class="list-group-item text-white bg-dark list-group-item-action" id="list-10-list" data-toggle="list" href="#list-10" role="tab">Cambridge Drive Residence</a>
        </div>
    </div>
</div>

<div class="modal modal-lg" tabindex="-1" role="dialog" id="gallery-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="text-black-50" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="carouselModalControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                    </div>
                    <a class="carousel-control-prev" href="#carouselModalControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselModalControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#link-our-works').addClass('active');
            $('.gallery-image').parent().click(function () {
                debugger
                var children = $(this).parents('.gallery').children();
                var html = "";
                for (var i = 0; i < children.length; i++) {
                    html += '<div class="carousel-item"><img class="d-block w-100" src="' + $($(children[i]).children()).attr('src') + '"></div>';
                }
                $('#carouselModalControls .carousel-inner').html(html);
                $('#gallery-modal').show();
            });
        });
    </script>
}